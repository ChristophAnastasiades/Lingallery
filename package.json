{
  "name": "lingallery",
  "version": "1.3.7",
  "private": false,
  "description": "A simple image gallery component for Vue.js",
  "author": "Christoph Anastasiades <info@lingulo.com>",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-bundle": "vue-cli-service build --target lib --name lingallery ./src/components/index.js"
  },
  "dependencies": {
    "epic-spinners": "^1.1.0",
    "hammerjs": "^2.0.8",
    "vue-async-computed": "^3.9.0"
  },
  "devDependencies": {
    "vue": "^2.6.12",
    "@vue/cli-plugin-babel": "^4.5.7",
    "@vue/cli-plugin-eslint": "^4.5.7",
    "@vue/cli-service": "^5.0.8",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.11.0",
    "eslint-plugin-vue": "^7.0.1",
    "node-sass": "^4.14.1",
    "sass-loader": "^10.0.3",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ]
  },
  "browser": {
    "./sfc": "./src/components/Lingallery.vue"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "keywords": [
    "vue",
    "lingallery",
    "image",
    "gallery",
    "thumbnail",
    "photo",
    "vuejs"
  ],
  "license": "MIT",
  "main": "./dist/lingallery.common.js",
  "module": "./dist/lingallery.umd.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristophAnastasiades/Lingallery.git"
  }
}
